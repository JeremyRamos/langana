<header id="page-header">
  <div id="masthead">
    <h1><%= link_to 'Langana', root_path %></h1>
    <nav>
      <p>
        <% if current_user %>
          <%= link_to current_user.first_name, current_user %>
	  <%= link_to 'Confirm phone number', confirm_user_path(current_user), class: 'button' unless current_user.confirmed_at %>
          <%= link_to 'Account Settings', edit_user_path(current_user), class: 'button' %>
          <%= link_to 'Sign Out', session_path, method: :delete, class: 'button' %>
        <% else %>
          <%= link_to 'Sign Up', signup_path, class: 'button' %>
          <%= link_to 'Sign In', signin_path, class: 'button' %>
        <% end %>
      </p>
    </nav>
  </div>
</header>
