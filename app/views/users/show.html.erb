<article id="user">
  <header>
    <%= profile_image_for(@user) %>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
  </header>
  
  <footer>
    <nav>
      <% if current_user?(@user) %>
        <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
        <%= link_to 'Delete Account', @user, 
                    method: :delete, 
                    data: { confirm: 'Are you sure you want to permanently delete your account?' },
                    class: 'button' %>
      <% else %>
        <%= link_to 'Give Reference', new_user_review_path(@user), class: 'button' %>
      <% end %>
    </nav>

  <ul id="users">
    <h3>References</h3>
    <% @user.references.each do |reference| %>
      <li>
        <div>
        <%= reference.work.capitalize %>
        for 
        <%= link_to reference.reference.name, reference.reference %>
        </div>
        <%= reference.comment %>
        <div>
        Reviewed on
        <%= reference.created_at.strftime("%d %b. %Y") %>
        </div>
      </li>
    <% end %>
  </ul>


  </footer>
</article>