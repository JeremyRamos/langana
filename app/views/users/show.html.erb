<article id="user">
  <header>
    <%= image_tag @user.profile_picture.large.url %>
    <h1><%= @user.first_name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
    <h2><%= @user.role.capitalize if @user.role %></h2>
  </header>

  <footer>
    <nav>
      <% if current_user?(@user) %>
        <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
        <%= link_to 'Delete Account', @user,
                    method: :delete,
                    data: { confirm: 'Are you sure you want to permanently delete your account?' },
                    class: 'button' %>
      <% else %>
        <%= link_to 'Give Reference', new_user_work_reference_path(@user), class: 'button' %>
      <% end %>
    </nav>

    <%= render 'work_references' %>

  </footer>
</article>
