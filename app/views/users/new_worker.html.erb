<header id="content-header">
  <h1>Sign Up</h1>
</header>

<%= form_for(@user) do |f| %>
  <%= render "shared/errors", object: @user %>
  <%= f.hidden_field :role %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :mobile_number %>
        <%= f.telephone_field :mobile_number, size: 12 %>
      </li>
      <li class="required">
        <%= f.label :service %>
        <%= f.select :service, User::SERVICES.sort, prompt: "Pick one" %>
      </li>
      <li class="required">
        <%= f.label :male, 'male', autofocus: true %>
        <%= f.radio_button :gender, 'male' %>
      </li>
      <li class="required">
        <%= f.label :female, 'female' %>
        <%= f.radio_button :gender, 'female' %>
      </li>
      <li class="required">
        <%= f.label :home_language %>
        <%= f.text_field :home_language, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :second_language %>
        <%= f.text_field :second_language, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :third_language %>
        <%= f.text_field :third_language, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :id_or_passport_number %>
        <%= f.text_field :id_or_passport_number, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :country_of_citizenship %>
        <%= f.text_field :country_of_citizenship, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :work_permit_status %>
        <%= f.text_field :work_permit_status, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :street_address %>
        <%= f.text_field :street_address, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :unit %>
        <%= f.text_field :unit, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :suburb %>
        <%= f.text_field :suburb, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :city %>
        <%= f.text_field :city, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :province %>
        <%= f.text_field :province, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :country %>
        <%= f.text_field :country, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :drivers_license, "Do you have a valid drivers license" %>
        <%= f.select :drivers_license, [['Yes', true], ['No', false]], prompt: "Pick one" %>
      </li>
      <li class="required">
        <%= f.label :password %>
        <%= f.password_field :password, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, size: 40 %>
      </li>
    </ol>
    <p>
      <%= f.submit "Create Account" %>
    </p>
  </fieldset>
<% end %>
