<header id="content-header">
  <h1>Don't worry. We will help you reset your password</h1>
</header>

<%= form_tag(forgot_password_path) do %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label_tag :mobile_number%>
        <%= text_field_tag :mobile_number, nil, autofocus: true, required: true, size: 20 %>
      </li>
    </ol>
    <p>
      <%= submit_tag 'Reset password' %>
    </p>
    <p>
      No account yet? <%= link_to 'Sign up!', choose_role_path %>
    </p>
  </fieldset>
<% end %>
